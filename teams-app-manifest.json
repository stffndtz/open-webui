{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.nordholding.openwebui",
  "developer": {
    "name": "Nordholding",
    "websiteUrl": "https://ai.nordholding.de",
    "privacyUrl": "https://ai.nordholding.de/privacy",
    "termsOfUseUrl": "https://ai.nordholding.de/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Open WebUI",
    "full": "Open WebUI - AI Assistant"
  },
  "description": {
    "short": "AI Assistant powered by Open WebUI",
    "full": "An intelligent AI assistant that helps you with various tasks, powered by Open WebUI technology."
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [
    {
      "configurationUrl": "https://ai.nordholding.de/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "chat",
      "name": "Chat",
      "contentUrl": "https://ai.nordholding.de",
      "websiteUrl": "https://ai.nordholding.de",
      "scopes": [
        "personal"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "ai.nordholding.de"
  ],
  "webApplicationInfo": {
    "id": "{{AAD_APP_ID}}",
    // "resource": "api://ai.nordholding.de/1c00de31-5382-4892-b531-83a85121ae57"
    "resource": "https://ai.nordholding.de"
  },
  "authentication": {
    "optional": false
  }
} 